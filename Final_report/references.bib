   journal = {International Journal of Coal Geology},
   keywords = {Coal,Float-sink separation,Mode of occurrence,Organic association,Particle size separation,Rare earth elements (REE)},
   month = {6},
   pages = {295-301},
   publisher = {Elsevier B.V.},
   title = {Organic and inorganic associations of rare earth elements in central Appalachian coal},
