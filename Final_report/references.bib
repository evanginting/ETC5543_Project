   title = {Study on extraction of rare earth elements from coal fly ash through alkali fusion – Acid leaching},
   volume = {136},
   year = {2019},
}
@article{Cui2021,
   abstract = {1. The species distribution of rare earth elements ions was simulated;
2. DTPADA-SBA-15 owned high adsorption efficiency and selectivity for REE (III);
