   doi = {10.1016/j.coal.2011.06.012},
   issn = {01665162},
   journal = {International Journal of Coal Geology},
   keywords = {Coal,Huainan Coalfield,Intrusive rocks,REE,Zhuji coal mine},
   month = {5},
   pages = {283-295},
   title = {Characterization of intrusive rocks and REE geochemistry of coals from the Zhuji Coal Mine, Huainan Coalfield, Anhui, China},
   volume = {94},
